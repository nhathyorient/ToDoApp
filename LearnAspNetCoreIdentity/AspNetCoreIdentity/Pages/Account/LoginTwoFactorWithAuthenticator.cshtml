@page
@model AspNetCoreIdentity.Pages.Account.LoginTwoFactorWithAuthenticatorModel
@{
}
<p>
    <h3>Please enter the Code from authenticator app</h3>
</p>

<div class="container border" style="padding: 20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Vm.VerifyForm.SecurityCode"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Vm.VerifyForm.SecurityCode" class="form-control"/>
            </div>
            <span class="text-danger" asp-validation-for="Vm.VerifyForm.SecurityCode"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Verify" />
            </div>
            <div class="col">
                <input type="checkbox" asp-for="Vm.VerifyForm.RememberMe" hidden/>
            </div>
        </div>
    </form>
</div>